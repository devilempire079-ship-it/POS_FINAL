# Environment Configuration Template
# COPY this file to .env and replace placeholder values

# Application Environment
NODE_ENV=development

# Server Configuration
PORT=3004
WEBSOCKET_PORT=3001

# CRITICAL SECURITY WARNING:
# DO NOT use default JWT secrets in production!
# Generate your own secure secrets using this command:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

# Security Configuration - CHANGE THESE VALUES!
# Use the command above to generate new secrets for each deployment
JWT_SECRET=YOUR_GENERATED_JWT_SECRET_HERE_REPLACE_WITH_RANDOM_BYTES
JWT_REFRESH_SECRET=YOUR_GENERATED_JWT_REFRESH_SECRET_HERE_REPLACE_WITH_RANDOM_BYTES

# Password Hashing Rounds (lower for development, higher for production)
BCRYPT_ROUNDS=12

# CORS Configuration
# For development: localhost URLs
# For production: your domain
CORS_ORIGIN=http://localhost:5173
ALLOWED_ORIGIN=http://localhost:5173

# Database Configuration
# SQLite (local development)
DATABASE_URL="file:./dev.db"

# Production Postgres Example (uncomment and modify for production):
# DATABASE_URL="postgresql://username:password@localhost:5432/pos_system"

# Rate Limiting
# Adjust based on expected load
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Security Headers
ENABLE_HELMET=true
ENABLE_CORS=true

# Logging Level
LOG_LEVEL=info
ENABLE_AUDIT_LOG=true

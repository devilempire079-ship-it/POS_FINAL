    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2"
  },
  "build": {
    "appId": "com.example.pos-system",
    "productName": "POS System",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "preload.js",
      "prisma/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
